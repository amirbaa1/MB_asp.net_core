@page
@model MB.Presentation.MVCCore.Areas.Admin.ArtCategoryMangement.ListModel
@{
}

<h1>List</h1>

<div class="card">
    <div class="card-header">
        <h3 class="float-left">Article Category List</h3>
        <div class="float-right">
            <a class="btn btn-success" asp-page="./Create" asp-area="Admin">
                Add New Art Category
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Operations</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var list in Model.ArtCategoryViewModels)
                {
                    <tr>
                        <td>@list.Id</td>
                        <td>@list.Title</td>
                        @if (@list.IsDelete == false)
                            {
                            <td>No</td>
                            }
                            else
                            {
                            <td>Yes</td>
                            }

                        <td>@list.CreateDate</td>
                        <td>
                            <div style="display: flex;">
                                <a style="margin-right:8px;" class="btn btn-warning" asp-page="./Edit" asp-route-id="@list.Id">Edit</a>
                                @if (list.IsDelete)
                                {
                                    <form method="post" asp-page-handler="Activate">
                                        <input type="hidden" name="id" value="@list.Id">
                                        <button type="submit" class="btn btn-success">Active</button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Delete">
                                        <input type="hidden" name="id" value="@list.Id">
                                        <button type="submit" class="btn btn-danger">Inactive</button>
                                    </form>
                                }
                            </div>
                        </td>
                        <td>
                            <form method="post" asp-page-handler="Remove">
                                <input type="hidden" name="id" value="@list.Id">
                                <button class="btn btn-outline-danger" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
</svg></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>    

    </div>
</div>