@page
@model MB.Presentation.MVCCore.Areas.Admin.Pages.ArtManagement.listModel
@{
}

<div class="card">
    <div class="card-header">
        <h3 class="float-left">Article List</h3>
        <div class="float-right">
            <a class="btn btn-success" asp-page="./Create" asp-area="Admin">Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Article Category</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Operations</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var list_art in Model.artViewModels)
                {
                    <tr>

                        <td>@list_art.Id</td>
                        <td>@list_art.Title</td>
                        <td>@list_art.ArtCategory</td>
                        <td>
                            @list_art.IsDelete

                            @if (list_art.IsDelete)
                            {
                                <i class="fa fa-close fa-2x text-danger"></i>
                            }
                            else
                            {
                                <i class="fa fa-check fa-2x text-success"></i>
                            }

                        </td>
                        <td>@list_art.CreateTime</td>
                        <td>
                            <div style="display:flex;">
                                <a class="btn btn-warning float-left mr-3" style="margin-right:8px;" asp-page="./Edit" asp-route-id="@list_art.Id">Edit</a>
                                @if (list_art.IsDelete)
                                {
                                    <form method="post" asp-page-handler="Activate" class="float-left">
                                        <button class="btn btn-success">Activate</button>
                                        <input type="hidden" name="id" value="@list_art.Id" />
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Delete" class="float-left">
                                        <button class="btn btn-danger">inactive</button>
                                        <input type="hidden" name="id" value="@list_art.Id" />
                                    </form>
                                }
                            </div>
                        </td>
                        <td>
                            <form method="post" asp-page-handler="Remove">
                                <input type="hidden" name="id" value="@list_art.Id"/>
                                <button class="btn btn-outline-danger"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
</svg></button>
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
